---
import { Icon } from "astro-icon/components";
import { SOCIAL_LINKS } from "./../consts";
import SplitText from "./SplitText.astro";
const links = SOCIAL_LINKS;
---

<footer id="contacts">
  <section class="tw-my-28">
    <span class="tw-text-[14px] lg:tw-text-[18px]">got project? want collaborate?</span>
    <div class="tw-font-monumentBold">
      <SplitText
        title="Letâ€™s do make some cool stuff together."
        letterClass="tw-text-[32px] lg:tw-text-[45px] lg:tw-py-1"
      />
    </div>
    <span class="tw-text-[14px] lg:tw-text-[18px]">looking forward to create together</span>
    <section class="tw-grid tw-mt-[63px] tw-grid-cols-[auto_1fr]">
      <div
        class="tw-col-start-1 tw-flex tw-flex-col tw-text-[15px] tw-space-y-2 tw-font-monument lg:tw-text-[19px]"
      >
        {
          links.map((link) => (
            <a
              href={link.url}
              target="_blank"
              rel="noopener noreferrer"
              class="tw-flex tw-items-center"
            >
              <span class="link">{link.name}</span>
              <Icon name="arrow-link" size={20} />
            </a>
          ))
        }
      </div>
      <div
        class="tw-col-start-2 tw-font-monumentBold tw-self-center tw-place-self-center tw-text-center"
      >
        <h2 class="tw-text-[24px] lg:tw-text-[30px]">Get in touch</h2>
        <div class="tw-flex tw-items-center tw-justify-center">
          <a
            href={"mailto:abbasdenny24@gmail.com"}
            target="_blank"
            rel="noopener noreferrer"
            class="tw-flex tw-items-center"
          >
            <span class="tw-text-[15px] tw-font-monument link lg:tw-text-[19px]">email me </span>
            <Icon name="envelope" class="tw-animate-pulse tw-ml-1" size={20} />
          </a>
        </div>
      </div>
    </section>
  </section>
  <section>
    <p class="tw-text-[12px] tw-text-center">&copy; 2024 Denny Zain. All rights reserved</p>
  </section>
</footer>
