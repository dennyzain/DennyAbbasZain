---
import { Icon } from "astro-icon/components";
import { SOCIAL_LINKS } from "./../consts";
import SplitText from "./SplitText.astro";
const links = SOCIAL_LINKS;
---

<footer id="contacts">
  <section class="tw-my-28">
    <span>got project? want collaborate?</span>
    <h2 class="tw-text-[40px] tw-font-monumentBold tw-tracking-wide tw-leading-9">
      <SplitText title="Letâ€™s do make some cool stuff together." letterClass="tw-py-1" />
    </h2>
    <span>looking forward to create together</span>
    <section class="tw-grid tw-mt-[63px] tw-grid-cols-[auto_1fr]">
      <ul class="tw-col-start-1 tw-flex tw-flex-col tw-text-[15px] tw-space-y-2 tw-font-monument">
        {
          links.map((link) => (
            <a
              href={link.url}
              target="_blank"
              rel="noopener noreferrer"
              class="tw-flex tw-items-center"
            >
              <li class="link">{link.name}</li>
              <Icon name="arrow-link" size={20} />
            </a>
          ))
        }
      </ul>
      <div
        class="tw-col-start-2 tw-font-monumentBold tw-self-center tw-place-self-center tw-text-center"
      >
        <h2 class="tw-text-[24px]">Get in touch</h2>
        <div class="tw-flex tw-items-center tw-justify-center">
          <a
            href={"mailto:abbasdenny24@gmail.com"}
            target="_blank"
            rel="noopener noreferrer"
            class="tw-flex tw-items-center"
          >
            <span class="tw-text-[15px] tw-font-monument link">email me </span>
            <Icon name="envelope" class="tw-animate-pulse tw-ml-1" size={20} />
          </a>
        </div>
      </div>
    </section>
  </section>
  <section>
    <p class="tw-text-[12px] tw-text-center">&copy; 2024 Denny Zain. All rights reserved</p>
  </section>
</footer>
